<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vivekapps.avtodock_new.carPackageExtraDetailActivityListView">

    <CheckBox
        android:id="@+id/carPackageExtraDetailCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:buttonTint="#e75748"/>

    <TextView
        android:id="@+id/carPackageExtraDetailName"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/carPackageExtraDetailPrice"
        app:layout_constraintStart_toEndOf="@+id/carPackageExtraDetailCB"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/carPackageExtraDetailDesc"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/carPackageExtraDetailPrice"
        app:layout_constraintStart_toStartOf="@+id/carPackageExtraDetailName"
        app:layout_constraintTop_toBottomOf="@+id/carPackageExtraDetailName"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/carPackageExtraDetailPrice"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000000"/>
</android.support.constraint.ConstraintLayout>
